{
    "name": "MiningHunter",
    "description": "Protect against cryptojacking based on modern research.",
    "version": "0.1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "icons": {
        "128": "img/logo_enabled.png"
    },
    "browser_action": {
        "default_title": "MiningHunter",
        "default_icon": {
            "128": "img/logo_enabled.png"
        },
        "default_popup": "view/popup.html"
    },
    "manifest_version": 2,
    "author": "Institute of IT Security Research"
}
